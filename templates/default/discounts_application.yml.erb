server:
    port: <%= node[:discounts][:port] %>

spring:
    data:
        elasticsearch:
            clusterNodes: "<%= node[:opsworks][:instance][:private_ip] %>:9300"
            clusterName: "<%= node[:elasticsearch][:cluster][:name] %>"
    datasource:
        url: "jdbc:mysql://<%= node.deploy[:discounts][:database][:host] %>:3306/<%= node.deploy[:discounts][:database][:database] %>"
        username: "<%= node.deploy[:discounts][:database][:username] %>"
        password: "<%= node.deploy[:discounts][:database][:password] %>"
        driverClassName: <%= node.default[:discounts][:database][:driverClassName] %>
        maxActive: <%= node.default[:discounts][:database][:maxActive] %>
        initialSize: <%= node.default[:discounts][:database][:initialSize] %>
        testOnBorrow: <%= node.default[:discounts][:database][:testOnBorrow] %>
        validationQuery: <%= node.default[:discounts][:database][:validationQuery] %>
        validationQueryTimeout: <%= node.default[:discounts][:database][:validationQueryTimeout] %>
        removeAbandoned: <%= node.default[:discounts][:database][:removeAbandoned] %>
        removeAbandonedTimeout: <%= node.default[:discounts][:database][:removeAbandonedTimeout] %>

logging:
    file: "<%= node.discounts[:log][:path] %>/<%= node.discounts[:log][:file] %>"
    config: "<%= node.deploy[:discounts][:deploy_to] %>/logback.xml"